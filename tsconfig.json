{
  "$schema": "https://json.schemastore.org/tsconfig.json",
  "compilerOptions": {
    "skipLibCheck": true,
    "allowJs": true,
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "noEmit": true,
    "target": "ES2022",
    "module": "ES2022"
  },
  "include": ["./**/*.ts", "./**/*.tsx"]
}
